<MAN>
  <LANGUAGE>eng</LANGUAGE>
  <TITLE>dirdero</TITLE>
  <TYPE>Scilab Function  </TYPE>
  <DATE>12-Jan-2007</DATE>
  <SHORT_DESCRIPTION name="dirdero">  Finite difference directional derivative for optimization Approximate f''(x) w </SHORT_DESCRIPTION>

  <CALLING_SEQUENCE>
  <CALLING_SEQUENCE_ITEM>z = dirdero(x,w,f,gc,epsnew)</CALLING_SEQUENCE_ITEM>
  </CALLING_SEQUENCE>

  <PARAM>
  <PARAM_INDENT>

    <PARAM_ITEM>
    <PARAM_NAME>x</PARAM_NAME>
    <PARAM_DESCRIPTION>
       <SP>
       : point
       </SP>
    </PARAM_DESCRIPTION>
    </PARAM_ITEM>

    <PARAM_ITEM>
    <PARAM_NAME>w</PARAM_NAME>
    <PARAM_DESCRIPTION>
       <SP>
       : direction
       </SP>
    </PARAM_DESCRIPTION>
    </PARAM_ITEM>

    <PARAM_ITEM>
    <PARAM_NAME>f</PARAM_NAME>
    <PARAM_DESCRIPTION>
       <SP>
       : function, the calling sequence is	[fun,grad]=f(x)
       </SP>
    </PARAM_DESCRIPTION>
    </PARAM_ITEM>

    <PARAM_ITEM>
    <PARAM_NAME>gc</PARAM_NAME>
    <PARAM_DESCRIPTION>
       <SP>
       : current gradient gc has usually been computed before the call to dirdero
       </SP>
    </PARAM_DESCRIPTION>
    </PARAM_ITEM>

    <PARAM_ITEM>
    <PARAM_NAME>epsnew</PARAM_NAME>
    <PARAM_DESCRIPTION>
       <SP>
       : difference increment (optional) default = 1.d-6
       </SP>
    </PARAM_DESCRIPTION>
    </PARAM_ITEM>

    <PARAM_ITEM>
    <PARAM_NAME>z</PARAM_NAME>
    <PARAM_DESCRIPTION>
       <SP>
       : directional derivative
       </SP>
    </PARAM_DESCRIPTION>
    </PARAM_ITEM>
  </PARAM_INDENT>
  </PARAM>
 
  <DESCRIPTION>
     <DESCRIPTION_INDENT>
     <DESCRIPTION_ITEM>
     <P>
      Finite difference directional derivative for optimization Approximate f''(x) w
     </P>
     </DESCRIPTION_ITEM>
     </DESCRIPTION_INDENT>
  </DESCRIPTION>

